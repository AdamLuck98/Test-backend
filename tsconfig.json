{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "allowJs": true,
      "outDir": "dist",
      "rootDir": "./",
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "Node",
      "experimentalDecorators": true,
      "skipLibCheck": true
    },
    "include": ["**/*"],
    "exclude": ["node_modules", "dist"]
  }
  